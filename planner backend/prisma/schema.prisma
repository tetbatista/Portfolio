generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trip {
  id           String        @id @default(uuid())
  destination  String
  starts_at    DateTime
  ends_at      DateTime
  is_confirmed Boolean       @default(false)
  created_at   DateTime      @default(now()) //Criar registro com a data atual no Banco de dados
  
  participants Participant[]

  @@map("trips")
}

model Participant {
  id           String  @id @default(uuid())
  name         String?
  email        String
  is_confirmed Boolean @default(false)
  is_owner     Boolean @default(false)
  trip_Id      String

  trip   Trip   @relation(fields: [trip_Id], references: [id])
  
  @@map("participants")
}
